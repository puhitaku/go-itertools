	t.Run("DropWhile", testDropWhile)
	t.Run("DropWhileS", testDropWhileS)
	t.Run("TakeWhile", testTakeWhile)
	t.Run("FilterFalse", testFilterFalse)
	t.Run("GroupBy", testGroupBy)
